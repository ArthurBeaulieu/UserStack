<div>
  <p id="error-output"></p>
</div>
<label for="lock-registration">{{__ "admin.users.lockRegistration"}}</label>
<input id="lock-registration" type="checkbox" {{#if locked}}checked{{/if}}/>
<h1>{{__ "admin.users.title"}}</h1>
<ul id="users-list">
  {{#each users}}
    <li data-id="{{this.id}}">
      <p>{{../__ "admin.users.username"}} : {{username}}</p>
      <p>{{../__ "admin.users.email"}} : <a href="mailto:{{this.email}}">{{this.email}}</a></p>
      <img src="{{this.avatar}}" alt="user-avatar">
      <p>{{../__ "admin.users.registration"}} : {{this.registration}}</p>
      <p>{{../__ "admin.users.lastLogin"}} : {{this.lastLogin}}</p>
      <p>{{../__ "admin.users.godfather"}} : {{this.godfather}}</p>
      <p>{{../__ "admin.users.depth"}} : {{this.depth}}</p>
      <p>{{../__ "admin.users.children"}} :
        {{#each this.children}}
          <span>{{this}}</span>
        {{/each}}
      </p>
      <p class="user-roles">{{../__ "admin.users.roles"}} : {{#each this.roles}}
        <span>
          <label for="role{{this.id}}">{{this.name}}</label>
          <input id="role{{this.id}}" type="checkbox" data-id="{{this.id}}" {{#if this.checked}}checked{{/if}}/>
        </span>
      {{/each}}</p>
      <button class="delete-user">{{../__ "admin.users.delete"}}</button>
    </li>
  {{/each}}
</ul>
<a href="/admin">{{__ "admin.nav.home"}}</a>
